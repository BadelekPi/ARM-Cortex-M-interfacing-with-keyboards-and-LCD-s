#include "TM4C123.h" // Device header
//functions prototypes
void delay_micro(int n);
void delay_milli(int n);
void LCD_Cmd(unsigned char command);
void LCD_init(void);
void LCD_Data(unsigned char data);

int main()
{
	LCD_init();
	LCD_Cmd(0x01);
	LCD_Cmd(0x08);
	delay_milli(500);
	LCD_Data('C');
	delay_milli(1);
	LCD_Data('O');
	delay_milli(1);
	LCD_Data('R');
	delay_milli(1);
	LCD_Data('T');
	delay_milli(1);
	LCD_Data('E');
	delay_milli(1);
	LCD_Data('X');
	delay_milli(1);
	delay_micro(500);
	
	
	
}

void LCD_init(void)
{
	SYSCTL->RCGCGPIO = 0x01; //same as (1U<<0)
	SYSCTL->RCGCGPIO = 0x02;
	GPIOA->DIR |= 0xE0; //0b 1110 0000 PORTA controle RS, E, RW
	GPIOA->DEN |= 0xE0;
	GPIOB->DIR |= 0xFF; //0b 1111 1111 
	GPIOB->DEN |= 0xFF;
	LCD_Cmd(0x38); //8-bits, 2 line display, 5x7 font
	LCD_Cmd(0x06); //increment automatically
	LCD_Cmd(0x0F); //Turn on display
	LCD_Cmd(0x01); //clear display
}

void LCD_Data(unsigned char data)
{
	GPIOA->DATA = 0x20; //0b 0010 0000 RS=1, E=0, RW=0
	GPIOB->DATA = data;
	GPIOA->DATA |= 0x80 //0b 0010 0000 | 1000 0000
  delay_micro(0);
  GPIOA->DATA = 0x00;
  delay_micro(0);  
}

void LCD_Cmd(unsigned char command)
{
		GPIOA->DATA = 0x00; //RS=0, RW=0, E=0
		GPIOB->DATA = command;
		GPIOA->DATA = 0x80; //E=1 to secure command
		delay_micro(0);
	  GPIOA->DATA = 0x00;
		if(command < 4)
			delay_milli(2);
		else
			delay_micro(37); //delay_micro(40)
}



void delay_micro(int n)
{
	int i,j;
	for(i=0;i<n;i++)
	for(j=0;j<3;j++)
	{}
}

void delay_milli(int n)
{
	int i,j;
	for(i=0;i<n;i++) b
	for(j=0;j<3180;j++)
	{}
}

void LCD_Cmd(unsigned char command)
{
	GPIOA -> DATA = 0x00; //RS=0, RW=0, E=0
	GPIOA -> DATA = command;
	GPIOA -> DATA = 0x80; //E=1 to secure command
	//delay_micro(0);
}


